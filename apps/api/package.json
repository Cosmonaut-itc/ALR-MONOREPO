{
	"name": "@ns-inventory/server",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.3.8",
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"build": "bun build ./src/index.ts --outdir ./dist --target bun",
		"start": "bun run ./dist/index.js",
		"typecheck": "tsc --noEmit",
		"lint": "eslint src",
		"db:migrate": "drizzle-kit migrate --config=src/drizzle.config.ts",
		"db:studio": "drizzle-kit studio --config=src/drizzle.config.ts",
		"db:generate": "drizzle-kit generate --config=src/drizzle.config.ts"
	},
	"dependencies": {
		"@better-auth/expo": "^1.2.8",
		"@hono/node-server": "^1.14.3",
		"@hono/zod-validator": "^0.7.1",
		"better-auth": "^1.2.8",
		"date-fns": "^3.6.0",
		"date-fns-tz": "^3.2.0",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.44.1",
		"hono": "^4.7.10",
		"pg": "^8.16.0",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@alr/eslint-config": "workspace:*",
		"@types/bun": "latest",
		"@types/pg": "^8.15.4",
		"drizzle-kit": "^0.31.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"tsx": "^4.19.4",
		"typescript": "^5.5.0",
		"zod-schema-faker": "^2.0.0-beta.5"
	}
}
