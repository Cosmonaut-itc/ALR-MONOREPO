{
  "name": "alr-monorepo",
  "private": true,
  "packageManager": "bun@1.3.8",
  "workspaces": ["apps/*", "apps/*/*", "apps/*/*/*", "packages/*"],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=./apps/web",
    "dev:api": "turbo run dev --filter=./apps/api",
    "dev:mobile": "turbo run dev --filter=./apps/mobile",
    "lint": "turbo run lint",
    "lint:web": "turbo run lint --filter=./apps/web",
    "lint:api": "turbo run lint --filter=./apps/api",
    "lint:mobile": "turbo run lint --filter=./apps/mobile",
    "typecheck": "turbo run typecheck",
    "typecheck:web": "turbo run typecheck --filter=./apps/web",
    "typecheck:api": "turbo run typecheck --filter=./apps/api",
    "typecheck:mobile": "turbo run typecheck --filter=./apps/mobile"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "bun-types": "^1.3.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "turbo": "^2.8.0",
    "typescript": "^5.9.3"
  }
}
